[ ca ]
default_ca = dog

[ req ]
req_extensions = v3_req
prompt = no
distinguished_name = req_distinguished_name

[ req_distinguished_name ]
C = US
ST = NC
L = Raleigh
O = dog
OU = Product
CN = dog

[ v3_req ]
keyUsage = keyEncipherment, dataEncipherment
extendedKeyUsage = serverAuth

[ v3_ca ]
basicConstraints = CA:TRUE
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid:always,issuer:always
 
[alt_names]
DNS.1 = lxd.dog

[ crl_ext ]
# issuerAltName=issuer:copy  #this would copy the issuer name to altname
authorityKeyIdentifier=keyid:always

[ dog ]
new_certs_dir = /tmp/dog/ssl/
unique_subject = no
certificate = /tmp/dog/ca/dog-root.cer
database = /tmp/dog/ssl/certindex
private_key = /tmp/dog/ca/private.pem
serial = /tmp/dog/ssl/serial
default_days = 1825
default_md = sha256
policy = dog_policy
x509_extensions = dog_extensions
email_in_dn = no
copy_extensions = copy

[ dog_policy ]
commonName = supplied
stateOrProvinceName = supplied
countryName = supplied
emailAddress = optional
organizationName = supplied
organizationalUnitName = optional

[ dog_extensions ]
basicConstraints = CA:false
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid:always
keyUsage = digitalSignature,keyEncipherment
extendedKeyUsage = serverAuth,clientAuth
crlDistributionPoints = URI:http://ca.dog/dog.crl
